{
  "security": {
    "jwt_secret": "your-secret-key-here",
    "password_hashing": {
      "algorithm": "bcrypt",
      "rounds": 12
    },
    "cors": {
      "allowed_origins": ["https://yourdomain.com"],
      "allow_credentials": true
    },
    "rate_limiting": {
      "enabled": true,
      "max_requests": 100,
      "time_window": 900
    },
    "input_validation": {
      "max_length": 1000,
      "allowed_tags": ["b", "i", "em", "strong"],
      "blocked_patterns": ["<script", "javascript:", "onload="]
    }
  }
}
